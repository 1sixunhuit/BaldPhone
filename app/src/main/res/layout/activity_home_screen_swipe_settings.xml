<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="?bald_background"
              android:orientation="vertical">

    <com.bald.uriah.baldphone.views.BaldTitleBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/page_transitions"/>

    <com.bald.uriah.baldphone.views.BaldMultipleSelection
            android:id="@+id/home_screen_transformer_chooser"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            app:is_vertical="false"
            app:text_size="@dimen/small"/>

    <TextView
            style="@style/BackgroundText"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="@string/preview"/>

    <com.bald.uriah.baldphone.views.NonSwipeableViewPager
            android:id="@+id/vpPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"/>
</LinearLayout>




