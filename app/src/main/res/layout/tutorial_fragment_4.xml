<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:orientation="vertical">

    <TextView
            android:id="@+id/bald"
            style="@style/BackgroundText.Large"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="@string/it_s_highly_recommended_to_use_baldphone_s_home_screen_as_the_default_home_launcher"
            app:layout_constraintBottom_toTopOf="@+id/bt_home"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <com.bald.uriah.baldphone.views.BaldButton
            android:id="@+id/bt_home"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:background="@drawable/style_for_buttons"
            android:text="@string/set_home_screen"
            android:layout_marginBottom="48dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/ButtonsText.Large"/>
</androidx.constraintlayout.widget.ConstraintLayout>